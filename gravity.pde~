void setup() {
    size(400, 400);
    noStroke();
}

void draw() {

}

class Planet {
    float x, y, dx, dy, size, mass;

    Planet(float nx, float ny, float nsize) {
	x = nx;
	y = ny;
	size = nsize;
	dx = 0;
	dy = 0;
	mass = (float) (size*size*Math.PI);
    }

    void move() {
	x += dx;
	y += dy;
    }

    float getX() {
	return x;
    }

    float getY() {
	return y;
    }

    float getSize() {
	return size;
    }

    float getMass() {
	return mass;
    }

    void draw() {
	ellipse(x, y, size*2, size*2);
    }

    void gravitate(Planet p) {
	float m = mass*p.getMass();
	float d = dist(x, y, p.getX(), p.getY());
	float g = m/d;
	float deltax = x - p.getX();
	float deltay = y - p.getY();
	dx = g*deltax/d;
	dy = g*deltay/d;
    }
    
}